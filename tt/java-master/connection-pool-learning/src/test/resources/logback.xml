<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{"yyyy-MM-dd HH:mm:ss.SSS", EST} [%thread] [%-5level] %logger{3}.%M - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>build/app.log</file>
        <append>true</append>
        <encoder>
            <pattern>%date{"yyyy-MM-dd HH:mm:ss.SSS", EST} [%thread] [%-5level] %logger{3}.%M - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- the level of the root level is set to DEBUG by default. -->
    <root level="DEBUG">
        <appender-ref ref="FILE"/>
    </root>

    <logger name="org.javacode" level="debug" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- full wire logging -->
    <logger name="org.apache.http.wire" level="debug" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <!-- header and context logging -->
    <logger name="org.apache.http" level="debug" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

</configuration>